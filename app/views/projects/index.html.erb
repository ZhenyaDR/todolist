<% provide(:title, 'Котегории') %>
<style>

</style>
<div class="login-page">
  <div class="form">
    <p style="color:black; font-size:14px ">Добавления проекта</p>
    <%= form_for(@proj,  url:'/projectcreate') do |f| %>
        <%= f.text_field :title,placeholder: 'Названия проекта' %>
        <%= f.submit 'Добавить', class: "button" %>
    <% end %>
  </div>
  <p class="text-center"> Мои проекты
</p>
<div class="page-content inset">
<div class="row">
  <table class="table table-hover">
    <thead>
    <tr>
        <th>№</th>
        <th>Названия </th>
        <th>Действия</th>
    </tr>
    </thead>
    <tbody>
    <%
      
      @projs.each do |cat| %>
        <tr>
          <td>
            <abbr title="Показать">
              <h5>
                <%=
                  link_to  "#{cat.id}" ,projectedit_path(cat.id),method: :post %>
              </h5>
            </abbr>
          </td>
          <td>
            <abbr title="<%= cat.title %>">
              <h5>
                <%= cat.title[0..15] %>
              </h5>
            </abbr>
          </td>
          <td>
            <h5>
              <%= link_to  "Удалить" ,projectdelete_path(cat.id), method: :delete, data: { confirm: 'Вы уверены?' }  %>/
              <%=
                  link_to  "Редактировать" ,projectedit_path(cat.id),method: :post %>
            </h5>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
</div>

</div>